<%# encoding: utf-8 %>


   <div class="left_content">
                    <% if @current_user%>
                    <h1>Welcome <%= @current_user.name %></h1>
                    <% else %>
                    <h1>Welcome to our club</h1>
                    <% end %>
                    <p>
                    <img src="images/icon1.gif" alt="" title="" class="left_icon" />
