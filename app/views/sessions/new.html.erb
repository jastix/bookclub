<% form_tag  session_path do  %>
    <p>Please log in</p>
    <p>
        <label> Username: </label>
        <%= text_field_tag 'login' %>
    </p>
    <p>
        <label> Password: </label>
        <%= password_field_tag 'password' %>
    </p>
<p><%= submit_tag "Log in" %></p>
<% end %>
              <% if !logged_in? %>
              <em>or <%= link_to 'Signup', new_user_path %></em>
              <% end %>

