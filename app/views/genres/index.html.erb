<div class="form_view">
<h2> Genres </h2>

<div class='tags_genres'>
<h3>Popular genres</h3>
<%= cloud(Genre.find(:all, :limit => 10)) %>
</div>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for genre in @genres %>
    <tr id="genre">
      <td><%=h genre.name %></td>
      <td><%= link_to "Show", genre %></td>
        <% if logged_in? %>
      <td><%= link_to "Edit", edit_genre_path(genre) %></td>
      <td><%= link_to "Destroy", genre, :confirm => 'Are you sure?', :method => :delete %></td>
        <% end %>
    </tr>
  <% end %>
</table>


<% if logged_in? %>
<p><%= link_to "New Genre", new_genre_path %></p>
<% end %>
</div>

