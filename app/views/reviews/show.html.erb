<div class="form_view">
<h2> Review </h2>

<p>
  <strong>Review:</strong>
  <%=h @review.review %>
</p>
<p>
  <strong>Rating:</strong>
  <%=h @review.rating %>
</p>
<p>
  <strong>Book:</strong>
  <%=h @review.book.title %>
</p>
<p>
  <strong>User:</strong>
  <%=h @review.user.name %>
</p>
<p>
    <% if logged_in? %>
    <% if @current_user.id == @review.user.id &&  @review.created_at > 1.hour.ago  %>

  <%= link_to "Edit", edit_review_path(@review) %> |
  <%= link_to "Destroy", @review, :confirm => 'Are you sure?', :method => :delete %> |
    <% end %>
    <% end %>
  <%= link_to "View All", reviews_path %>
</p>
</div>

