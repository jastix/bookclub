<%# encoding: utf-8 %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title> Bookclub - <%= params[:controller].capitalize %> - <%= params[:action].capitalize %> </title>
    <%= stylesheet_link_tag "style" %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'unitpngfix' %>
  </head>

 <body>

<div id="main_container">
	    <div class="top_leafs"><img src="images/top_leafs.png" alt="" title=" "/></div>

	 <div id="header">
    	<div class="logo">
       <%= link_to 'Book Club', books_path %>
        </div>
        <div class='flash' id='flash' <%= "style='display:none'" if flash[:notice].blank? %>>
        <%= flash[:notice] %>
        </div>
        <div class='flash' id='error' <%= "style='display:none'" if flash[:error].blank? %>>
        <%= flash[:error] %>
        </div>

        <div class="menu">
            <ul>
                <li class="selected"><%= link_to "Main", books_path %> </li>
                <li><%= link_to "Users", users_path %></li>
                <li><%= link_to "Genres", genres_path %></li>
                <li><%= link_to "Authors", authors_path %></li>
                <li><%= link_to "Reviews", reviews_path %></li>
            </ul>
        </div>
    </div> <!-- header -->
<div id="center_content">
<%= yield %>
            <div class="bottom_content">
                <div class="about_text">
                      <h1>About us</h1>
                    <p>
                    Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                    </p>

                </div>

                <div class="friends_list">
                 <h1>Some friends</h1>
                    <ul class="list">
                    <li><%= link_to 'Railsbridge', 'http://www.railsbridge.org' %></li>
                    <li><%= link_to 'Railstutor', 'http://www.railstutor.org'%></li>
                    <li><%= link_to 'Builders', 'http://www.builders.railsbridge.org' %></li>
                    <li><%= link_to 'Railsmentors', 'http://www.railsmentors.org' %></li>
                    </ul>
                </div>

                <div class="bottom_right">
                	<%= link_to image_tag("join_club.gif",:border => "0"), new_session_path, {:alt => "join"} %>
                    <%= link_to image_tag ("csstemplatesmarket.gif", :border => 0), 'http://csstemplatesmarket.com', {:alt => 'csstemplatesmarket'}%>
                </div>

               <div class="footer">
                &copy; Railstutor 2009. All Rights Reserved
                </div>
</div>
</div>
</div>
</div>
<!-- end of main_container -->

</body>
</html>

